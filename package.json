{
  "name": "sftp-client",
  "version": "1.0.0",
  "description": "Cross-platform Desktop SFTP client using SSH2 and Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --linux --mac --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "keywords": [
    "sftp",
    "ssh2",
    "file-transfer",
    "electron",
    "desktop"
  ],
  "author": {
    "name": "Tapas",
    "email": "tapas@example.com"
  },
  "license": "MIT",
  "dependencies": {
    "ssh2": "^1.15.0"
  },
  "devDependencies": {
    "electron": "28.0.0",
    "electron-builder": "24.9.1"
  },
  "build": {
    "appId": "com.sftp.client",
    "productName": "SFTP Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "sftp.js",
      "public/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    }
  }
}
